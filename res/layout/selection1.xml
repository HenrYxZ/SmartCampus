<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/profileInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/selection_profile_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center_horizontal"
            facebook:preset_size="small" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/treelogo"
                android:layout_width="170dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.70"
                android:src="@drawable/tree" />

            <TextView
                android:id="@+id/universityName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="1000 puntos"
                android:textColor="#FF000C"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.8"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/showMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:background="@drawable/button"
            android:drawableTop="@drawable/explore_72"
            android:onClick="onClick_map"
            android:paddingBottom="25dp"
            android:paddingTop="30dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1.00"
            android:background="@drawable/button"
            android:drawableTop="@drawable/recycle_722"
            android:onClick="onClick_recycle"
            android:paddingBottom="25dp"
            android:paddingTop="30dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:background="@drawable/button"
            android:drawableTop="@drawable/claim_722"
            android:onClick="onClick_claims"
            android:paddingBottom="25dp"
            android:paddingTop="30dp" />
    </RadioGroup>

    <com.scampus.especial1.BannerPager
        android:id="@+id/mainBanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1" />

</LinearLayout>